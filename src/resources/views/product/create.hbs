<div class="card mt-4">
    <div class="card-header bg-dark text-light">
        <h3 class="card-title">Thêm mới sản phẩm</h3>
    </div>


    <form method="POST" action="/product/store">
        <div class="card-body">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Tên Sản Phẩm">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" placeholder="Mô Tả Sản Phẩm"></textarea>
            </div>
            
            <div class="form-group">
                <label for="thumb">Image</label>
                <input type="text" class="form-control" id="thumb" name="thumb" placeholder="Hình Ảnh">
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-dark">Thêm mới</button>
        </div>
    </form>
</div>